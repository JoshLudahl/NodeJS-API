<!DOCTYPE html>
<html lang="en">

<head>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

</head>

<body class="container">

    <header>

    </header>

    <main>
        <div class="jumbotron">
            <h1>This is great</h1>
            <p>Welcome to templating using EJS</p>
        </div>
    </main>

    <footer id="dataSpot">
        <button onclick="load()">Load</button>
        <script>
            const options = {
                method: 'GET'
            };
            const url = 'http://localhost:3000/products';
            const request = new Request(url, options);
            function load() {
                fetch(request).then(function (response) {
                    return response.json();
                }).then(function (data) {
                    console.log(data);
                    var intervalID = setTimeout(() => {
                        var para = document.createElement('p');
                        var node = document.createTextNode(data.products[0].name);
                        //document.getElementById("texticle").innerText = data.results[0].cell;
                        para.appendChild(node);
                        var current = document.getElementById("dataSpot");
                        current.appendChild(para);

                    }, 2000);

                });

            }    
        </script>
    </footer>

    <div id="app">
        {{ message }}
    </div>

    <script>

            var app = new Vue({
          el: '#app',
          data: {
            message: 'Hello Vue!'
          }
        })
        </script>
</body>

</html>